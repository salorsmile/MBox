<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/welcome1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_favorite_back"
    tools:context="salorsmile.lzh.mbox.FavoriteActivity">
    <TextView
        android:id="@+id/tv_nomusic_tip"
        android:text="这个人很懒，没有收藏一首歌曲"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_favorite_top"
        android:background="#1080"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tvfav"
            android:text="我的收藏"
            android:textColor="#66e4393c"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="(长按删除)"
            android:textColor="#666"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/tvfav"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/imb_favorite_back"
            android:src="@mipmap/dialog_standard_return_icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:id="@+id/lv_favorite"
        android:layout_below="@+id/rl_favorite_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</RelativeLayout>
